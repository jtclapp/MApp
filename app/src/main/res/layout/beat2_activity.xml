<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context="com.example.musicapp.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT THE BEAT FOR YOUR SONG: "
        android:textColor="#E6DADA"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/progress_horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/play_rock1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button2"
            android:layout_margin="5dp"
            android:textOff=""
            android:textOn="" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rock Beat #1"
            android:layout_margin="5dp"
            android:textColor="#E6DADA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_horizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/play_rock2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button2"
            android:layout_margin="5dp"
            android:textOff=""
            android:textOn="" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#E6DADA" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/progress_horizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/play_rock3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button2"
            android:layout_margin="5dp"
            android:textOff=""
            android:textOn="" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#E6DADA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_horizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/play_rock4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button2"
            android:layout_margin="5dp"
            android:textOff=""
            android:textOn="" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#E6DADA" />

    </LinearLayout>
</LinearLayout>