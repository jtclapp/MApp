<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    android:background="@drawable/gradient_background"
    tools:context=".DownloadedBeats">

    <TextView
        android:id="@+id/BeatTextView"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="Select A Beat to Download: "
        android:textColor="#E6DADA"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Hip/Hop Beat #1"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Hip/Hop Beat #2"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Hip/Hop Beat #3"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Rock Beat #1"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Chill Beat #1"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Chill Beat #2"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Chill Beat #3"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Chill Beat #4"
            android:textColor="#E6DADA"/>
        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country Beat #1"
            android:layout_margin="3dp"
            android:textColor="#E6DADA"/>
</RadioGroup>

    <ImageButton
        android:id="@+id/DownloadButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#696969"
        app:srcCompat="@android:drawable/stat_sys_download_done" />

</LinearLayout>