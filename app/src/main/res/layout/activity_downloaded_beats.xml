<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".DownloadedBeats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:adSize="SMART_BANNER"
            app:adUnitId="ca-app-pub-3852614797851381/6198719529"/>

        <TextView
            android:id="@+id/BeatTextView"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Select a beat to download or delete: "
            android:textColor="#E6DADA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/BeatTextView2"
            android:layout_width="371dp"
            android:layout_height="49dp"
            android:layout_margin="5dp"
            android:textColor="#E6DADA"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/Beat_spinner"
            android:layout_width="341dp"
            android:layout_height="43dp"
            android:layout_margin="2dp" />

        <TextView
            android:id="@+id/BeatTextView3"
            android:layout_width="371dp"
            android:layout_height="308dp"
            android:layout_margin="5dp"
            android:textColor="#E6DADA"
            android:textSize="20sp" />

        <ImageButton
        android:id="@+id/DownloadButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#303030"
        app:srcCompat="@android:drawable/stat_sys_download_done" />

</LinearLayout>
</ScrollView>