<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".Beatpage3">

    <TextView
        android:id="@+id/RB_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT A BEAT FOR YOUR SONG: "
        android:textColor="#E6DADA"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/progress_horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/play_RB1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button2"
            android:layout_margin="5dp"
            android:textOff=""
            android:textOn="" />

        <CheckBox
            android:id="@+id/RB_checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Chill Beat #1"
            android:textColor="#E6DADA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_horizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/play_RB2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button2"
            android:layout_margin="5dp"
            android:textOff=""
            android:textOn="" />

        <CheckBox
            android:id="@+id/RB_checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Chill Beat #2"
            android:textColor="#E6DADA" />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/progress_horizontal4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/play_RB3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_button2"
        android:layout_margin="5dp"
        android:textOff=""
        android:textOn="" />

    <CheckBox
        android:id="@+id/RB_checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Chill Beat #3"
        android:textColor="#E6DADA" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/progress_horizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/play_RB4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button2"
            android:layout_margin="5dp"
            android:textOff=""
            android:textOn="" />

        <CheckBox
            android:id="@+id/RB_checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Chill Beat #4"
            android:textColor="#E6DADA" />

    </LinearLayout>

    <TextView
        android:id="@+id/Beat3TextView"
        android:layout_width="match_parent"
        android:layout_height="124dp" />
    <LinearLayout
        android:id="@+id/progress_horizontal7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adjuster3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Volume Adjuster:"
            android:textColor="#E6DADA" />

        <SeekBar
            android:id="@+id/Volume3"
            android:layout_width="152dp"
            android:layout_margin="3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>